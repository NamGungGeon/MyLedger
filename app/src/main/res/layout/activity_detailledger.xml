<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 메뉴 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="상세보기"
                android:id="@+id/detail_name"
                android:textColor="@color/fontbasic"
                android:textSize="20dp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/divider"/>

        <!-- 요약 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/fontbasic"
            android:text="요약"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/leftborder"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/pannel"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_margin="20dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/detail_status"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/fontbasic"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:id="@+id/detail_summary"
                    android:text="summary"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.gms.ads.AdView
            android:layout_margin="10dp"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            android:id="@+id/detail_ad"
            android:background="@color/background"
            ads:adUnitId="ca-app-pub-5333091392909120/7577330551"/>

        <!-- 타임라인 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textColor="@color/fontbasic"
            android:text="타임라인"
            android:layout_margin="10dp"
            android:paddingLeft="10dp"
            android:background="@drawable/leftborder"/>
        <androidx.recyclerview.widget.RecyclerView
            android:padding="10dp"
            android:background="@drawable/pannel"
            android:layout_margin="10dp"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="2dp"
            android:divider="@color/background"
            android:id="@+id/detail_list"/>
    </LinearLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/round"
        android:text="+"
        android:textSize="30dp"
        android:textColor="@color/fontbasic"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:id="@+id/detail_ledgerAddBtn"
        android:elevation="10dp"/>

</RelativeLayout>